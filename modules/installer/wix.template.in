<?xml version="1.0" encoding="UTF-8"?>

<?include $(sys.CURRENTDIR)modules\installer\config.wxi ?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi"
	xmlns:util="http://schemas.microsoft.com/wix/UtilExtension">

	<Product Id="*"
		Language="$(var.ProductLanguage)"
		Manufacturer="$(var.Manufacturer)"
		Name="$(var.ProductName)"
		UpgradeCode="$(var.UpgradeCode)"
		Version="$(var.ProductVersion)">

		<Package Id="*"
			Comments="This package installs the $(var.ProductDisplayName)"
			Compressed="yes"
			Description="$(var.ProductName) Installer"
			InstallerVersion="200"
			Keywords="Installer"
			Languages="$(var.ProductLanguage)"
			Manufacturer="$(var.Manufacturer)"
			Platform="$(sys.BUILDARCH)"
			InstallPrivileges="elevated"
			InstallScope="perMachine"
			SummaryCodepage='1252' />

		<MediaTemplate EmbedCab="yes" />
		<MajorUpgrade
			Schedule="afterInstallFinalize"
			DowngradeErrorMessage="A later version of [ProductName] is already installed. Setup will now exit." />

		<Directory Id="TARGETDIR" Name="SourceDir">
			<Directory Id="$(var.PlatformProgramFilesFolder)">
				<Directory Id="InstallDir" Name="$(var.InstallDir)">
					<Directory Id="ProductDir" Name="$(var.ProductName)" />
				</Directory>
			</Directory>
		</Directory>

		<DirectoryRef Id="ProductDir">
			<Component Id="PCIAgent" Guid="c18597a6-292c-11e7-93ae-92361f002671">
				<File Id="AgentExe" Source="$(var.BinDir)\cpack_test.exe" Vital="yes" />
			</Component>
		</DirectoryRef>

		<Feature Id="AppFeature" Title="$(var.ProductName)" Level="1">
			<ComponentRef Id="PCIAgent" />
		</Feature>
	</Product>
</Wix>
